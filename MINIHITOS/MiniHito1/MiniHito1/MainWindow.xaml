<Window x:Class="MiniHito1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniHito1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--Grid Principal -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra encabezado -->
        <StackPanel VerticalAlignment="Top" Background="Violet" Grid.Column="0" Grid.Row="0">
            <Label Content="GESPROC" Foreground="AliceBlue" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Grid Contenedor -->

        <Grid x:Name="contenedor" Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <SolidColorBrush Color="White"/>
            </Grid.Background>

            <Grid Grid.Row="1" Background="Violet">
                <TabControl TabStripPlacement="Left" Margin="0,0,10,0" Padding="10">
                    <TabControl.Resources>
                        <!-- Estilo de los TabsItems -->
                        <Style TargetType="TabItem">
                            <Setter Property="Width" Value="95"/>
                            <Setter Property="Height" Value="34"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Margin" Value="0,0,0,0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Style>
                        <!-- Estilo Botonoes -->
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Violet"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="Violet"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="5,2"/>
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style> 
                    </TabControl.Resources>
                    <TabItem Header="Inicio" Margin="-1,51,1,-51">
                        <StackPanel HorizontalAlignment="Left" Width="691">
                            <Button Content="PROYECTOS" Width="100" Height="30" Margin="0,100,500,0"/>
                            <Button Content="EMPLEADOS" Width="100" Height="30" Margin="0,10,500,0"/>
                            <Button Content="ECONOMIA" Width="100" Height="30" Margin="0,10,500,0"/>
                            <Button Content="ESTADISTICAS" Width="100" Height="30" Margin="120,-110,250,200"/>
                            <Button Content="USUARIOS" Width="100" Height="30" Margin="120,-350,250,0"/>
                            <Image Source="resources/maestre.png" Width="150" Height="50" Margin="505,-38,0,0"/>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Proyectos" Margin="-1,58,1,-58">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Content="Proyectos" FontSize="20" FontWeight="Bold" Margin="10"/>
                            <DataGrid x:Name="dataGridPersonas" Grid.Row="1" Margin="10" AutoGenerateColumns="True"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Empleados" Margin="-1,65,1,-65">
                        <StackPanel>
                            <Label Content="Tareas" FontSize="20" FontWeight="Bold"/>
                            <Label Content="Listado de Tareas" FontSize="16"/>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="ECONOMIA" Margin="-1,73,1,-73">
                        <StackPanel>
                            <Label Content="Clientes" FontSize="20" FontWeight="Bold"/>
                            <Label Content="Listado de Clientes" FontSize="16"/>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="ESTADISTICAS" Margin="1,79,-1,-79">
                        <StackPanel>
                            <Label Content="Configuración" FontSize="20" FontWeight="Bold"/>
                            <Label Content="Configuración de la aplicación" FontSize="16"/>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Usuarios" Margin="1,84,-1,-84">
                        <StackPanel>
                            <Label Content="Usuarios" FontSize="20" FontWeight="Bold"/>
                            <Label Content="Listado de Usuarios" FontSize="16"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
