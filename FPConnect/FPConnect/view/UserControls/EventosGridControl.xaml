<UserControl x:Class="FPConnect.view.UserControls.EventosGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FPConnect.view.UserControls"
             mc:Ignorable="d" 
             Height="720" Width="860">
    <Grid>
        <Calendar x:Name="MiCalendario" Margin="0,25,0,0" Style="{DynamicResource CalendarStyle1}" CalendarButtonStyle="{DynamicResource CalendarButtonStyle1}" CalendarDayButtonStyle="{DynamicResource CalendarDayButtonStyle1}" CalendarItemStyle="{DynamicResource CalendarItemStyle1}" >
            <Calendar.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2"/>
            </Calendar.LayoutTransform>
        </Calendar>
    </Grid>
</UserControl>
